{
	"compilerOptions": {
		"target": "es2016",
		"jsx": "react-jsx",
		"module": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "types",
		"emitDeclarationOnly": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.test.ts",
		"sample",
		"dist"
	]
}
