{
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "preserve",
		"module": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "dist",
		"outDir": "dist",
		"lib": ["ESNext", "dom"],
		"moduleResolution": "node"
	},
	"include": ["src/**/*"]
}
